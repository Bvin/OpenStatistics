<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <LinearLayout 	        
	        android:id="@+id/ll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true">
		    <EditText 
		        android:id="@+id/et_input_ip"
		        android:layout_width="0.0dip"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_weight="1"
		        android:hint="input your ip address"/>
	      	<Button
		        android:id="@+id/btn_ip_ensure"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:layout_gravity="right"
		        android:text="确定"/>
	   </LinearLayout>
	    <TextView
	        android:id="@+id/tv_show"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dip"
	        android:layout_below="@+id/ll"
	        android:text="欢迎使用ShareSDK Statistics 开源统计SDK"/>
	    <Button
	        android:id="@+id/btn_change_appkey"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/tv_show"
	        android:minWidth="200dip"
	        android:text="改变APPKEY"
	        android:visibility="gone"/>
	    
	    <Button
	        android:id="@+id/btn_click"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_change_appkey"
	        android:minWidth="200dip"
	        android:text="点击事件(event)"/>
	     <Button
	        android:id="@+id/btn_click_acc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_click"
	        android:minWidth="200dip"
	        android:text="点击事件(event_acc)"/>
	     <Button
	        android:id="@+id/btn_click_label_acc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_click_acc"
	        android:minWidth="200dip"
	        android:text="点击事件(event_label_acc)"/>
	     <Button
	        android:id="@+id/btn_click_hashmap"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_click_label_acc"
	        android:minWidth="200dip"
	        android:text="点击事件(event_hashmap)"/>
	     <Button
	        android:id="@+id/btn_update_online_config"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_click_hashmap"
	        android:minWidth="200dip"
	        android:text="更新发送策略"/>
	     <Button
	        android:id="@+id/btn_app_list"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_click_hashmap"
	        android:minWidth="200dip"
	        android:text="应用推荐"
	        android:visibility="gone"/>
	    <Button
	        android:id="@+id/btn_to_activity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_update_online_config"
	        android:minWidth="200dip"
	        android:text="另一个activity"/>
	    <Button
	        android:id="@+id/btn_to_webpage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_to_activity"
	        android:minWidth="200dip"
	        android:text="Js call java Example in Webivew"/>
	    <Button
	        android:id="@+id/btn_to_fragment_tabs"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_to_webpage"
	        android:minWidth="200dip"
	        android:text="Page in Fragment Tabs"/>
	    <Button
	        android:id="@+id/btn_to_fragment_stack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/btn_to_fragment_tabs"
	        android:minWidth="200dip"
	        android:text="Page in Fragment Stack"/>
	</RelativeLayout>
    
</ScrollView>
